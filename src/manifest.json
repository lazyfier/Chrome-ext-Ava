{
  "manifest_version": 2,
  "name": "ava",
  "description": "ava",
  "version": "1",
  "options_page": "options.html",
  "icons":
   {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
   },
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
      "default_popup": "popup.html"
  },
  "permissions":
	[
        "downloads",
        "activeTab",
		"contextMenus",
		"tabs",
		"notifications",
		"webRequest",
		"webRequestBlocking",
		"storage",
        "<all_urls>"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}